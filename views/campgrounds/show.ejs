<% layout('layouts/boilerplate') %>
    <h1>SHOW CAMPGROUNDS</h1>

 <div class="row">
     <div class="col-6">
        <div class="card mb-3" >
            <img src="<%=campgrounds.image%>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%=campgrounds.title%></h5>
              <p class="card-text"><%=campgrounds.description%></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-muted"><%=campgrounds.location%></li>
              <li class="list-group-item">price: $<%=campgrounds.price%>/night</li>
            </ul>
            <div class="card-body">
                <a class="card-link btn btn-info" href="/campgrounds/<%=campgrounds._id%>/edit">Edit</a>
                <form class="d-inline"  action="/campgrounds/<%=campgrounds._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">DELETE</button>
                </form>
            </div>
            <footer class="card-footer text-muted">
                2 days ago
                <a href="/campgrounds">All Campgrounds</a>
            </footer>
          </div>
     </div>
     <div class="col-6">
      <h2>Leave a Review</h2>
      <form action="/campgrounds/<%=campgrounds._id%>/reviews" method="POST"  novalidate class="validated-form mb-3">
        <div class="mb-3">
          <div class="mb-3">
            <label class="form-label" for="rating">rating</label>
            <input class="form-range" type="range" name="review[rating]" min="1" max="5" id="rating">
          </div>
          <label class="form-label" for="body">Review:</label>
          <textarea class="form-control" name="review[body]" id="" cols="30" rows="3" required></textarea>
          <div class="valid-feedback">
            looks good!
        </div>
        </div>
        <button class="btn btn-success">Submit</button>
      </form>
      
      <%for(let review of campgrounds.reviews){%> 
      <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title">Rating: <%=review.rating%></h5>
            <p class="card-text">Review: <%=review.body%></p>
            <form action="/campgrounds/<%=campgrounds._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
          </div>
      </div>

      <%}%> 
     </div>
 </div>

 